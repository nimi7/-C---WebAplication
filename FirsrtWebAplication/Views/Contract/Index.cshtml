@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    @using (Html.BeginForm("Index", "Contract", FormMethod.Get))
    {
        <p>
            FirstName : @Html.TextBox("Search") <br />
            <input type="submit" value="Search" />
        </p>

    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Renterid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hiredid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Propertyid)
        </th>
