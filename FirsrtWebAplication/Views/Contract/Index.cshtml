        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enddatetime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Renterid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hiredid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Propertyid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Startdatetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enddatetime)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Contractid }) |
                @Html.ActionLink("Details", "Details", new { id = item.Contractid }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Contractid })
            </td>
        </tr>
    }

</table>
